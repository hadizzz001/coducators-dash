generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  subtitle    String
  student     String
  age         String
  description String
  img         String[]
  video       String[]
}

model Course {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  level       String
  duration    Json
  age         Json
  category    String
  subcategory String?
  description String
  img         String[]
}

model Blog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  author      String
  title       String
  description String
  img         String[]
  date        DateTime @default(now()) @db.Date
}

model Team {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  position    String
  category    String
  description String
  img         String[]
}

model Brand {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId 
  img  String[]
}

model Category {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String   @unique 
}

model Subcategory {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String   @unique
  category String 
}

model Review {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  son        String
  age        String
  description String
  stars       String
  date        DateTime @default(now()) @db.Date
}



model Faq {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  question String  
  answer String 
}